{
  "name": "elite-api",
  "version": "1.0.0",
  "description": "EliteBMS API",
  "main": "index.js",
  "scripts": {
    "build:js": "browserify -t babelify client/main.js -o public/bundle.js",
    "watch:js": "watchify -t babelify ./client/main.js -o ./public/bundle.js -v",
    "build:watch": "npm run watch:js",
    "serve": "nodemon --watch server server/index.js & npm run build:watch",
    "test": "node_modules/.bin/mocha -w",
    "jest": "jest"
  },
  "author": "Jamie Collinson, Damien Robson",
  "license": "ISC",
  "dependencies": {
    "babelify": "^5.0.3",
    "bcryptjs": "^2.1.0",
    "body-parser": "^1.12.0",
    "bookshelf": "^0.7.9",
    "browserify": "^9.0.3",
    "ejs": "^2.3.1",
    "express": "^4.12.0",
    "jest-cli": "^0.4.0",
    "jwt-simple": "^0.2.0",
    "knex": "^0.7.4",
    "mocha": "^2.2.1",
    "moment": "^2.9.0",
    "mysql": "^2.5.5",
    "nodemon": "^1.3.7",
    "react": "^0.13.2",
    "react-router": "^0.13.2",
    "react-tools": "^0.13.2",
    "reflux": "^0.2.7",
    "should": "^5.2.0",
    "soap": "^0.8.0",
    "superagent": "^0.21.0",
    "supertest": "^0.15.0",
    "text-filter": "^0.1.0",
    "truncate": "^1.0.4",
    "underscore.string": "^3.0.3",
    "watch": "^0.14.0",
    "watchify": "^2.4.0"
  },
  "jest": {
    "rootDir": "client",
    "scriptPreprocessor": "<rootDir>/preprocessor.js",
    "unmockedModulePathPatterns": [
      "node_modules/react"
    ]
  }
}
